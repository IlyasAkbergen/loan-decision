{% extends 'base.html.twig' %}

{% block title %}Client Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% if error is not null %}
            <div class="alert alert-danger" role="alert">
                {{ error }}
            </div>
        {% endif %}

        {% if client is not null %}
            <h1>Client Details</h1>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ client.fullName }} <a href="{{ path('client_edit', {id: client.id}) }}" class="btn btn-warning">Edit</a></h5>
                    <p class="card-text"><strong>ID:</strong> {{ client.id }}</p>
                    <p class="card-text"><strong>Email:</strong> {{ client.email }}</p>
                    <p class="card-text"><strong>Phone:</strong> {{ client.phoneNumber }}</p>
                    <p class="card-text"><strong>SSN:</strong> {{ client.ssn }}</p>
                    <p class="card-text"><strong>Date of Birth:</strong> {{ client.dateOfBirth|date('Y-m-d') }}</p>
                    <p class="card-text"><strong>Income:</strong> {{ client.income }}</p>
                    <p class="card-text"><strong>Credit Rating:</strong> {{ client.creditRating }}</p>
                    <p class="card-text"><strong>Address:</strong> {{ client.address }}</p>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
