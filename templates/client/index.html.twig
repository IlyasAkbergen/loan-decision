{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1>Clients List</h1>
        <div class="list-group">
            {% for client in clients %}
                <a href="{{ path('client_show', { id: client.id }) }}" class="list-group-item list-group-item-action">
                    {{ client.email }}
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block title %}
    Clients list
{% endblock %}
