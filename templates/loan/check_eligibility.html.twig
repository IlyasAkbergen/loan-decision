{% extends 'base.html.twig' %}

{% block title %}Check Eligibility{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Check Loan Eligibility</h1>
    <form action="{{ path('loan_check_eligibility') }}" method="post">
        <div class="form-group">
            <label for="product">Select Product</label>
            <select class="form-control" id="product" name="product_id">
                {% for product in products %}
                    <option value="{{ product.id }}">{{ product.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group mt-3">
            <label for="client">Select Client</label>
            <select class="form-control" id="client" name="client_id">
                {% for client in clients %}
                    <option value="{{ client.id }}">{{ client.fullName }}, {{ client.email }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Calculate</button>
    </form>
</div>
{% endblock %}
